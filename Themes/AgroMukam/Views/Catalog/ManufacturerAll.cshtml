@model IList<ManufacturerModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Manufacturers").Text);
    //page class
    Html.AppendPageCssClassParts("html-manufacturer-list-page");
}
<div class="page manufacturer-list-page">
    <div class="page-title">
        <h1>@T("Manufacturers.List")</h1>
    </div>
    <div class="page-body">
        <div class="manufacturer-grid">
            <div class="item-grid row">
                @foreach (var item in Model)
                {
                    <div class="item-box col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                            <div class="manufacturer-item card">
                                <h2 class="title card-block">
                                    <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" class="card-text" title="@item.PictureModel.Title">
                                        @item.Name
                                    </a>
                                </h2>
                                <div class="picture">
                                    <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                        <img alt="@item.PictureModel.AlternateText" class="card-img-top" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                    </a>
                                </div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
